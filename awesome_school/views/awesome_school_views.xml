<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!-- creating from view -->
    <record id="awesome_school_form" model="ir.ui.view">
        <field name="name">awesome.school.form</field>
        <field name="model">awesome.school</field>

        <field name="arch" type="xml">
            <form string="My Test Form">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="supervisor_id" />
                            <field name="teacher_id" />
                            <field name="establishment_date" />
                        </group>

                        <group>
                            <field name="country" />
                            <field name="state" />
                            <field name="city" />

                            <field name="street" />
                            <field name="street_2" />
                            <field name="zip" />
                        </group>

                        <group>
                            <field name="classroom_ids" />
                            <field name="students_ids" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- creating tree view -->
    <record id="awesome_school_view_tree" model="ir.ui.view">
        <field name="name">awesome.school.view.tree</field>
        <field name="model">awesome.school</field>

        <field name="arch" type="xml">
            <tree string="My Test Tree View">
                <field name="name" />
                <field name="supervisor_id" />
                <field name="teacher_id" />
                <field name="establishment_date" />

                <field name="country" />
                <field name="state" />
                <field name="city" />

                <field name="street" />
                <field name="street_2" />
                <field name="zip" />
                <field name="classroom_ids" />
                <field name="students_ids" />
            </tree>
        </field>
    </record>


    <!-- create window action -->
    <record id="awesome_school_action" model="ir.actions.act_window">
        <field name="name">Schools Action Name</field>
        <field name="res_model">awesome.school</field>

        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>This is help text</p>
        </field>
    </record>


    <!-- creating menuitem -->
    <menuitem id="awesome_school_root" name="Awesome School Menu Item" action="awesome_school_action" sequence="10" />


</odoo>