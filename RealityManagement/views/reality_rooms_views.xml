<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="reality_rooms_form_view" model="ir.ui.view">
            <field name="name">RealityManagement.reality_rooms.form</field>
            <field name="model">RealityManagement.reality_rooms</field>
            <field name="arch" type="xml">
                <form string="Rooms">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="surface"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="reality_rooms_tree_view" model="ir.ui.view">
            <field name="name">RealityManagement.reality_rooms.tree</field>
            <field name="model">RealityManagement.reality_rooms</field>
            <field name="arch" type="xml">
                <tree string="Rooms">
                    <field name="name"/>
                    <field name="surface"/>
                </tree>
            </field>
        </record>

        <record id="reality_rooms_act_window" model="ir.actions.act_window">
            <field name="name">Rooms</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">RealityManagement.reality_rooms</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Hello from rooms
                </p>
            </field>
        </record>

        <menuitem name="Rooms" id="reality_rooms_menu" parent="reality_property_menu" action="reality_rooms_act_window"/>

    </data>
</odoo>